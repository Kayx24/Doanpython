<FlatButton@ButtonBehavior+Label>:
    text: 'default'

<AdminWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos
    
                            

    BoxLayout:
        id: top_nav
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: (.06, .45, .45,1)
            Rectangle:
                size: self.size
                pos: self.pos

        FlatButton:
            id: file_trigger
            text: 'File'
            on_release: file_dropdown.open(self)
            size_hint: (.1,None)
            height: 30

            Widget:
                on_parent: file_dropdown.dismiss()

                DropDown:
                    id: file_dropdown
                    Button:
                        id: close
                        text: 'quit'
                        size_hint_y: None
                        height: 30
        Label:
            text: 'Admin Dashboard'
            bold: True
            size_hint: (.9,None)
            height: 30
    BoxLayout:
        id: content_nav

        BoxLayout:
            id: nav_tabs
            size_hint_x: .15
            orientation: 'vertical'
            spacing: 3
            canvas.before:
                Color:
                    rgba: (.06, .52, .52,1)
                Rectangle:
                    size: self.size
                    pos: self.pos

            ToggleButton:
                id: user_toggle
                text: 'quản lí người dùng'
                size_hint_y: .1
                state: 'down'
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)
            ToggleButton:
                id: thong_ke_toggle
                text: 'thống kê doanh thu'
                size_hint_y: .1
                background_color: (.06, .47, .47, 1)
                background_normal: ''
                group: 'admin_navs'
                on_state: root.change_screen(self)

            Label:
                id: sp
                text: ''
                size_hint_y: .7

        
        BoxLayout:
            orientation: 'vertical'

            id: all_content
            size_hint_x: .5
            padding: (20,10)
            
            ScreenManager:
                id: scrn_mngr
                Screen:
                    id: scrn_user
                    name: 'scrn_user'

                    BoxLayout:
                        orientation:'vertical'
                        spacing: 10
                        BoxLayout:
                            id:scrn_users
                        
                Screen:
                    id: scrn_thong_ke
                    name: 'scrn_thong_ke'
            BoxLayout:
                spacing: 5
                size_hint_y: None
                height: 35
            BoxLayout:
                id: ops_fields
                spacing: 5
                size_hint_y: None
                height: 30
                GridLayout:
                    cols: 3  # Thiết lập số cột cần hiển thị
                    spacing: 5
                Button:
                    id: crud_delete
                    text: 'Delete Non-VIP Accounts'
                    spacing: 5
                    size_hint_y: None
                    height: 35
                    on_press: root.delete_selected_accounts()
                Button:
                    text:"123"
                    on_press:print(123)
