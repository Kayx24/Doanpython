<MainWidget>:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                MDTopAppBar:
                    pos_hint: {"top": 1}
                    md_bg_color: "#e7e4c0"
                    specific_text_color: "#000000"
                    elevation: 5
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    right_action_items: [["magnify", lambda x: None]]
                Label:
                    text: "Phần Mềm Nhận Diện Biển Báo Giao Thông"
                    size_hint: 0.6, 0.5
                    pos_hint: {'x': 0.20, 'y': 0.57}
                    color: 1, 0, 0, 1  # Màu chữ: Đỏ (Red)
                    font_size: "19sp"  # Kích thước phông chữ: 20sp
                Button:
                    text: "Quét"
                    size_hint: None, None
                    size: self.parent.width * 0.15, self.parent.height * 0.07
                    pos: self.parent.width * 0.43, self.parent.height * 0.05
                    color: 1, 0, 0, 1
                    on_press: root.btn_click_Quet()
                
                GridLayout:
                    background_color:1, 0, 0, 1
                    pos_hint:{'x':0.05,'y':0.2}
                    size_hint:0.9,0.5
                    spacing:"20dp","20dp"
            
                    rows:2
                    cols:2
                    Button:
                        text:"UpLoad Hình ảnh"
                        on_press: root.btn_click_UploadHinh()
                    Button:
                        text:"Thông Tin Biển Báo"
                        on_press: root.btn_click_TTBienBao()
                    Button:
                        text:"Lịch Sử Tìm Kiếm"
                        on_press: root.btn_click_Tim()
                    Button:
                        text:"Thông Tin Ứng Dụng"
                        on_press: root.btn_click_TTApp()
        MDNavigationDrawer:
            id: nav_drawer
            radius: [0, 16, 0, 16]
            MDNavigationDrawerMenu:
                auto_dismiss: True
                MDNavigationDrawerHeader:
                    source: "Images/userIcon.png"
                    title: "Username"
                    text: "User information"
                    font_size: "15sp"
                    spacing: "10dp"
                    padding: [12, 0, 0, 50]

                MDNavigationDrawerLabel:
                    text: "User"

                MDNavigationDrawerItem:
                    icon: "star"
                    right_text: ""
                    text_right_color: [0.29, 0.28, 0.22, 1]
                    text: "Purchase V.I.P"

                MDNavigationDrawerItem:
                    icon: "Images/shareIcon.png"
                    right_text: ""
                    text_right_color: [0.29, 0.28, 0.22, 1]
                    text: "Share"
                    spacing: "10dp"
                    padding: [10, 0, 0, 30]

                MDNavigationDrawerItem:
                    text: "Log out"
                    align: "center"
    
