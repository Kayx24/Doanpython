<TTbienbao>:
    GridLayout:
        cols: 2
        spacing: 20
        size_hint_y: None
        height: self.minimum_height
        padding: 0, 150, 0, 0

        ScrollView:
            GridLayout:
                id: layout
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                spacing: 10

<TTbienbaoButton>:
    Button:
        size_hint_y: None
        height: 150
        background_color: 0.2, 0.6, 0.9, 1
        color: 1, 1, 1, 1
        font_size: 16
        pos_hint: {'center_x': 0.5}

<ImageLabel>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 150
        Image:
            source: root.image_path
            size_hint_y: None
            height: 100
        Label:
            text: root.label_text
            size_hint_y: None
            height: 50
            color: 0, 0, 0, 1
