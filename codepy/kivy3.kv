<MyLayout>:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                MDTopAppBar:
                    pos_hint: {"top": 1}
                    md_bg_color: "#e7e4c0"
                    specific_text_color: "#000000"
                    elevation: 5
                    left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]
                    right_action_items: [["magnify", lambda x: None]]

                Image:
                    id: selected_image
                    size_hint: 0.65, 0.65
                    pos_hint: {'center_x': 0.5, 'center_y': 0.7}
                    source: "Images/__ruan_mei_honkai_and_1_more__fe90c2ad3c46efd002abe86229bcdc37.png"

                BoxLayout:
                    size_hint: 0.45, 0.45
                    pos_hint: {'center_x': 0.5, 'center_y': 0.45}
                    canvas:
                        Color:
                            rgb: 1, 0, 0
                    MDIconButton:
                        icon: "star"
                        text_color: 1, 1, 1, 1
                        md_bg_color: 1, 1, 1, 0
                        size_hint: 0.1, 0.1
                        pos_hint: {'center_x': 0.5, 'center_y': 0.57}
                        on_press: root.change_star_color(self)

                    Image:
                        size_hint: 0.1, 0.1
                        pos_hint: {'center_x': 0.5, 'center_y': 0.56}
                        source: "Images/star_off.png"

                    Image:
                        size_hint: 0.1, 0.1
                        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
                        source: "Images/star_off.png"

                    Image:
                        size_hint: 0.1, 0.1
                        pos_hint: {'center_x': 0.5, 'center_y': 0.56}
                        source: "Images/star_off.png"

                    Image:
                        size_hint: 0.1, 0.1
                        pos_hint: {'center_x': 0.5, 'center_y': 0.57}
                        source: "Images/star_off.png"

                MDRaisedButton:
                    style: "tonal"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                    size_hint: 0.7, 0.075
                    text: "Đánh giá"
                    text_color: "black"
                    font_size: "20sp"
                    md_bg_color: "#9FD7F9"
                    theme_shadow_color: "Custom"
                    shadow_color: "black"

                MDLabel:
                    pos_hint: {'center_x': 0.5, 'center_y': 0.25}
                    size_hint: 0.7, 0.2
                    text: "CaiDitConMeVoTaoXinhVoCoLo"
                    halign: "center"
                    md_bg_color: "#778899"

                MDBottomAppBar:
                    id: bottom_appbar
                    md_bg_color: "#e7e4c0"

                    MDFabBottomAppBarButton:
                        id: fab_button
                        icon: "home"
                        theme_bg_color: "Custom"
                        md_bg_color: "#373A22"
                        pos_hint: {'center_x': 0.5}

                    MDFabBottomAppBarButton:
                        id: fab_button
                        icon: "camera"
                        theme_bg_color: "Custom"
                        md_bg_color: "#373A22"
                        pos_hint: {'center_x': 0.75}

                    MDFabBottomAppBarButton:
                        id: fab_button
                        icon: "plus"
                        theme_bg_color: "Custom"
                        md_bg_color: "#373A22"
                        pos_hint: {'center_x': 0.25}
                        on_release: root.open_file_chooser()

                MDNavigationDrawer:
                    id: nav_drawer
                    radius: (0, 16, 0, 16)
                    MDNavigationDrawerMenu:
                        MDNavigationDrawerHeader:
                            source: "Images/__ruan_mei_honkai_and_1_more__fe90c2ad3c46efd002abe86229bcdc37.png"
                            title: "Mei dep gai"
                            text: "Meixinhdep@yahoo.com"
                            text_size: 0.07
                            spacing: "10dp"
                            padding: "12dp", 0, 0, "50dp"

                        MDNavigationDrawerLabel:
                            text: "User"

                        MDNavigationDrawerItem:
                            icon: "star"
                            right_text: ""
                            text_right_color: "#4a4939"
                            text: "Purchase V.I.P"

                        MDNavigationDrawerItem:
                            icon: "Images/shareIcon.png"
                            right_text: ""
                            text_right_color: "#4a4939"
                            text: "Share"
                            spacing: "10dp"
                            padding: "10dp", 0, 0, "30dp"

                        MDNavigationDrawerItem:
                            text: "               Log out"
                            align: "center"
                            background_color: 1, 0, 0, 0

                MDNavigationDrawer:
                    id: right_nav_drawer
                    radius: (0, 16, 0, 16)
